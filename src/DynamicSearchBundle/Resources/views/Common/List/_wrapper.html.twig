<div class="row">
    {% set search_column_width = 12 %}
    {% if filter is iterable and filter|length > 0 %}
        {% set search_column_width = 9 %}
        {% include '@DynamicSearch/Common/_filter_form.html.twig' %}
    {% endif %}

    <div class="col-12 col-sm-{{ search_column_width }}">
        {% if paginator is not null %}
            {% include '@DynamicSearch/Common/List/Paginated/_wrapper.html.twig' %}
        {% elseif data is not null %}
            {% include '@DynamicSearch/Common/List/Full/_wrapper.html.twig' %}
        {% endif %}
    </div>

</div>